{
  "extends": "./kausal_common/configs/tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@common/*": ["./kausal_common/src/*"],
      "/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "esModuleInterop": true
  },
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.tsm", ".next/types/**/*.ts", "*.ts", "*.mjs", "*.mts"],
  "exclude": ["node_modules"]
}
